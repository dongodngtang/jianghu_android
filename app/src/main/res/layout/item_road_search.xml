<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_road_search_content"
    android:layout_width="match_parent"
    android:minHeight="44dp"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item_bg">
    <TextView
        android:id="@+id/tv_item_road_search_content"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/item_road_search_selector"
        android:layout_centerVertical="true"
        android:drawablePadding="7dp"
        android:text=""
        android:gravity="center_horizontal"
        android:textSize="15sp"
        android:ellipsize="end"
        android:maxLines="1" />

    <include layout="@layout/divider_road_search"
        android:layout_height="0.6dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"/>
</RelativeLayout>