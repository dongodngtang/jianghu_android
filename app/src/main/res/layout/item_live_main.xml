<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item_live_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_live_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:orientation="vertical">

            <!-- 转帖 -->
            <LinearLayout
                android:id="@+id/ll_live_forwarding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_forwarding_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="案例介绍的立即发送觉得阿拉斯加从决定到出发，仅仅就是一个月的时间，那种感觉有点像说走就走的冲动！出国游一直是心里我的向往，但是也是我的犹豫单图情况单图情况单图情况"
                    android:textColor="@color/txt_title_light_standard"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_live_nickname_forwarding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="草草"
                        android:textColor="#FF399793"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:text="转发"
                        android:textColor="@color/txt_live_tip"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/index_icon_transmit" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/color_divider" />


            </LinearLayout>

            <!--头像 昵称 时间 地址-->
            <LinearLayout
                android:id="@+id/ll_live_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_live_header"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/none_header" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_live_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="尾巴草草"
                        android:textColor="@color/txt_dark_live_nickname"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_live_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8分钟前"
                            android:textColor="@color/txt_live_tip"
                            android:textSize="12sp" />

                        <View
                            android:id="@+id/line_live_location"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="1dp"
                            android:background="@color/color_divider" />

                        <TextView
                            android:id="@+id/tv_live_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="14dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="华侨城－波托菲诺－大沙河骑行"
                            android:textColor="@color/txt_dark_live_location"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_live_is_follow"
                    android:layout_width="54dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:text="关注"
                    android:visibility="gone" />


            </LinearLayout>

            <!--文字内容-->
            <LinearLayout
                android:id="@+id/ll_live_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:layout_marginTop="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_live_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_setting_item"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/txt_light_content_54"
                    android:textColorLink="@color/txt_button_common_light"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_live_content_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_setting_item"
                    android:textColor="@color/txt_light_content_54"
                    android:textColorLink="@color/txt_button_common_light"
                    android:textSize="15sp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/tv_live_content_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:background="@android:color/transparent"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="更多"
                    android:textColor="@color/txt_dark_live_location"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- 图片 -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_live_images"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:scrollbars="none"
                android:visibility="gone" />
            <!-- 活动 帖子 -->
            <LinearLayout
                android:id="@+id/ll_live_action"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="14dp"
                android:background="@color/color_background_part"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:id="@+id/iv_live_action_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/activity_pic" />

                    <TextView
                        android:id="@+id/tv_live_action_status"
                        android:layout_width="50dp"
                        android:layout_height="18dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="4dp"
                        android:background="@color/color_embellish"
                        android:gravity="center"
                        android:text="召集中"
                        android:textColor="@color/txt_title_dark_standard"
                        android:textSize="12sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_live_action_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="案例介绍的立即发送觉得阿拉斯加从决定到出发，仅是"
                    android:textColor="@color/txt_light_content_54"
                    android:textSize="15sp" />
            </LinearLayout>

            <!--类型-->
            <LinearLayout
                android:id="@+id/ll_live_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/live_icon_label" />

                <TextView
                    android:id="@+id/tv_live_type_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="户外"
                    android:textColor="@color/txt_live_tip"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_live_type_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="户外"
                    android:textColor="@color/txt_live_tip"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_live_type_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="户外"
                    android:textColor="@color/txt_live_tip"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 分享 点赞 评论 -->
            <RelativeLayout
                android:id="@+id/rl_live_share"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="14dp">


                <ImageView
                    android:id="@+id/iv_live_share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:paddingRight="20dp"
                    android:src="@drawable/selector_detail_more" />

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_live_like"
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/selector_do_like" />

                    <TextView
                        android:id="@+id/tv_like_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赞"
                        android:textColor="@color/txt_live_tip"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_live_comment"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/selector_card_comment" />

                    <TextView
                        android:id="@+id/tv_card_commnet_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论"
                        android:textColor="@color/txt_live_tip"
                        android:textSize="14sp" />


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>