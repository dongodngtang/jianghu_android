<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_view_parent"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/color_theme"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/title_left_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_back_3x" />

        <TextView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="5"
            android:maxLength="5"
            android:text="@string/back"
            android:textColor="@color/txt_title_right"
            android:textSize="@dimen/txt_title_small" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/title_right_content"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:textColor="@color/txt_title_right"
            android:textSize="@dimen/txt_title_small"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/right_btn"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical|right"
            android:contentDescription="@null"
            android:padding="14dp"
            android:visibility="gone" />
    </FrameLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="68dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/txt_title_right"
        android:textSize="18sp" />

</RelativeLayout>