<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llyt_this"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F2F2"
    android:orientation="horizontal"
    android:paddingBottom="17dp"
    android:paddingLeft="17dp"
    android:paddingRight="17dp">

    <ImageView
        android:id="@+id/iv_action_detail_head"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginRight="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/none_header" />

    <RelativeLayout
        android:id="@+id/rl_to_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rllt_action_detail_comment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_action_detail_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#BFBFBF"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_action_detail_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rllt_action_detail_comment"
            android:layout_marginTop="6dp"
            android:background="@drawable/action_detail_comment_3x"
            android:linksClickable="true"
            android:paddingBottom="17dp"
            android:paddingLeft="24dp"
            android:paddingRight="17dp"
            android:paddingTop="17dp"
            android:textColor="#FF404040"
            android:textColorLink="@color/blue_word"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>