<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vi_item_message_parent"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:clickable="true"
    android:background="@drawable/selector_list_item_bg"
    android:minHeight="60dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingRight="14dp">

        <RelativeLayout
            android:id="@+id/rl_message_list_circle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:background="@drawable/icon_new_like">

            <ImageView
                android:id="@+id/iv_itemt_msg_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_itemt_msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="11dp"
            android:text="@string/comment"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_itemt_msg_nobell"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_itemt_msg_text"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_msg_main_nobell_3x"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_itemt_msg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_itemt_msg_text"
            android:layout_below="@id/tv_itemt_msg_text"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/tv_itemt_msg_nobell"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gray_word"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_itemt_msg_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_message_circle_red"
            android:gravity="center"
            android:padding="2dp"
            android:text="12"
            android:textColor="#FFFFFFFF"
            android:textSize="10sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_item_msg_has_unread"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/mark_new_msg_3x"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_message_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:textColor="@color/gray_word"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:id="@+id/v_item_msg_frg_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="52dp"
        android:background="@color/line_bg" />

</LinearLayout>