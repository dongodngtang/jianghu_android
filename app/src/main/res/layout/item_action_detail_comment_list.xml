<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llyt_this"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="top"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="14dp"
        android:background="@color/bg_action_detail_comment_line"
        />

    <ImageView
        android:id="@+id/iv_action_detail_head"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/none_header" />

    <TextView
        android:id="@+id/tv_action_detail_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_action_detail_head"
        android:textColor="#297875"
        android:layout_toRightOf="@id/iv_action_detail_head"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_alignParentRight="true"
        android:text="12222"
        android:textColor="@color/bg_action_detail_comment_time"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"/>

    <TextView
        android:id="@+id/tv_action_detail_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_action_detail_more_content"
        android:textSize="16sp"
        android:layout_toRightOf="@id/iv_action_detail_head"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_action_detail_nickname"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:textColorLink="@color/blue_word"
        android:layout_marginBottom="15dp"
        />

    </RelativeLayout>
