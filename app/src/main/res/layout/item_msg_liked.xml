<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/item_msg_liked_head"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <RelativeLayout
        android:id="@+id/rl_item_msg_liked_parent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/selector_msg_item_disable_press"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_itemt_liked_portrait"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/shape_gray_pic_bg" />

        <RelativeLayout
            android:id="@+id/rlyt_item_liked_original"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp" >

            <ImageView
                android:id="@+id/iv_itemt_liked_original"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/tv_itemt_liked_original"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                android:gravity="center"
                android:ellipsize="end"
                android:lines="2"
                android:text="@string/msg_commenter_original_hint"
                android:background="#8A000000"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/rlyt_item_liked_original"
            android:layout_toRightOf="@id/iv_itemt_liked_portrait">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_itemt_liked_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="二三"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#FF297875"
                    android:layout_marginRight="7dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_itemt_liked_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/like_for_you"
                    android:layout_marginRight="14dp"
                    android:textColor="@color/txt_light_remark"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_msg_like_time"
                android:layout_marginTop="7dp"
                android:text="12:25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_light_remark"
                android:textSize="12sp" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/v_gap"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_divider" >
    </View>

</LinearLayout>