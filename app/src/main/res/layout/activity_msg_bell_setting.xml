<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/llyt_this"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FFFFFF"
	android:clipToPadding="true"
	android:fitsSystemWindows="true"
	android:orientation="vertical">

    <!-- 标题栏 -->

	<net.doyouhike.app.bbs.ui.widget.common.TitleView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:left_text="@string/comment_title"
		app:m_title="@string/bell_setting_title"/>

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF2F2F2">
        
    	<View
        	android:id="@+id/v_list_top"
        	android:layout_width="match_parent"
        	android:layout_height="0.6dp"
            android:layout_marginTop="17dp"
        	android:background="@color/gray_bg" />
        
        <RelativeLayout 
            android:id="@+id/rlyt_bell_setting"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/v_list_top"
            android:background="#FFFFFFFF" >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_centerVertical="true"
                android:text="@string/bell_setting_text"
                android:textColor="@color/black_word"
                android:textSize="16sp" />
            
            <TextView 
                android:id="@+id/tv_bell_setting_switch"
                android:layout_width="68dp"
                android:layout_height="40dp"
                android:layout_marginRight="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_bell_setting_switch" />
            
        </RelativeLayout>
        
    	<View
        	android:id="@+id/v_list_bottom"
        	android:layout_width="match_parent"
        	android:layout_height="0.6dp"
        	android:layout_below="@id/rlyt_bell_setting"
        	android:background="@color/gray_bg" />
    	
    	<TextView 
    	    android:id="@+id/tv_bell_setting_explain"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_marginTop="11dp"
    	    android:paddingLeft="17dp"
    	    android:paddingRight="17dp"
    	    android:layout_below="@id/v_list_bottom"
    	    android:text="@string/bell_setting_explain"
    	    android:textColor="@color/gray_word"
    	    android:textSize="14sp" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/shape_titlebar_bottom_line" />
    </RelativeLayout>

</LinearLayout>