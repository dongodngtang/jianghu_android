<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vi_action_detail_part1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <!--活动费用-->
    <TextView
        android:id="@+id/ll_action_detail_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_action_detail_cost_aa"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:text=""
        android:textColor="#FF4A90E2"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_action_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="标题"
        android:textColor="@color/txt_title_light_standard"
        android:textSize="20sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/rl_action_detail_user_info"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/action_detail_avator"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/none_header" />


        <TextView
            android:id="@+id/ib_action_detail_attention"
            android:layout_width="54dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_common_button"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/txt_button_common_light"
            android:textSize="10sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/ib_action_detail_attention"
            android:layout_toRightOf="@+id/action_detail_avator"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxEms="20"
                    android:text="昵称"
                    android:textColor="#ff297875"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_action_detail_sex"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_me_male_3x" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_action_detail_actionNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="共发起*次活动"
                android:textColor="#42000000"
                android:textSize="12sp" />

        </LinearLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="14dp"
        android:background="@color/line_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_location_start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="出发地"
            android:textColor="@color/txt_light_content_54"
            android:textSize="14sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="70dp"
            android:background="@color/line_bg" />

        <TextView
            android:id="@+id/tv_location_start_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_location_start"
            android:layout_alignBottom="@+id/tv_location_start"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignStart="@+id/view2"
            android:textColor="@color/text_action_detail_content"
            android:textSize="14sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="44dp">


        <TextView
            android:id="@+id/tv_location_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="目的地"
            android:textColor="@color/txt_light_content_54"
            android:textSize="14sp" />


        <!--活动目的地-->
        <net.doyouhike.app.bbs.ui.widget.action.AutoRelativeLayout
            android:id="@+id/arl_action_detail_location_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="70dp"
        android:background="@color/line_bg" />
    <!--活动时间-->
    <RelativeLayout
        android:id="@+id/rl_days"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="日期"
            android:textColor="@color/txt_light_content_54"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_action_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:textColor="@color/text_action_detail_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_action_detail_totalDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/txt_light_remark"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="70dp"
            android:background="@color/line_bg" />

    </RelativeLayout>

    <!--集合时间-->
    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="集合"
            android:textColor="@color/txt_light_content_54"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_act_action_detail_time_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="14dp"
            android:textColor="@color/text_action_detail_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_action_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/tv_act_action_detail_time_date"
            android:textColor="@color/txt_title_light_standard"
            android:textSize="16sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="70dp"
            android:background="@color/line_bg" />

    </RelativeLayout>
    <!--参加情况-->
    <RelativeLayout
        android:id="@+id/rl_action_detail_member_line"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">


        <TextView
            android:id="@+id/tv_action_detail_member_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="参加"
            android:textColor="@color/txt_light_content_54"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_action_detail_memberNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_action_detail_jionedNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="0"
                android:textColor="@color/text_action_detail_content"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_action_detail_limitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/0"
                android:textColor="@color/text_action_detail_content"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="7dp"
            android:drawableRight="@drawable/ic_arrow_right"
            android:text="全部"
            android:textColor="@color/txt_light_tip_26"
            android:textSize="12sp" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_action_detail_join"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:visibility="gone" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg" />


    <!--活动内容-->
    <net.doyouhike.app.bbs.ui.widget.action.RichTextView
        android:id="@+id/rt_action_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp" />

    <!--活动类型-->
    <net.doyouhike.app.bbs.ui.widget.action.AutoRelativeLayout
        android:id="@+id/ll_action_detail_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:layout_marginTop="14dp"
        android:minHeight="44dp" />
    <!--底部菜单占位-->
    <View
        android:layout_width="match_parent"
        android:layout_height="49dp" />
</LinearLayout>