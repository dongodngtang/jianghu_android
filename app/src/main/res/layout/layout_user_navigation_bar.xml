<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vi_widget_me_condition_bar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#FFCCCCCC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFFFF"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llyt_me_navigation_post"
            style="@style/me_navi_title_parent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/me_navi_title_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/live_telecast" />

            <TextView
                android:id="@+id/tv_me_navigation_post_count"
                style="@style/me_navi_title_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero" />
            <View
                android:layout_weight="1"
                android:layout_width="1dp"
                android:layout_height="2dp"/>
            <View
                android:id="@+id/vi_me_navigation_post_index"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/selector_user_nav_index"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyt_me_navigation_action"
            style="@style/me_navi_title_parent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_me_navigation_action"
                    style="@style/me_navi_title_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/action" />


                <ImageView
                    android:id="@+id/iv_me_navigation_action_down"
                    android:layout_width="9dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_alignTop="@id/tv_me_navigation_action"
                    android:layout_toRightOf="@id/tv_me_navigation_action"
                    android:src="@drawable/ic_action_list_condition_down" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_me_navigation_action_count"
                style="@style/me_navi_title_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero" />

            <View
                android:layout_weight="1"
                android:layout_width="1dp"
                android:layout_height="2dp"/>
            <View
                android:id="@+id/vi_me_navigation_action_index"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/selector_user_nav_index"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llyt_me_navigation_favorite"
            style="@style/me_navi_title_parent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/me_navi_title_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorite" />

            <TextView
                android:id="@+id/tv_me_navigation_favorite_count"
                style="@style/me_navi_title_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero" />
            <View
                android:layout_weight="1"
                android:layout_width="1dp"
                android:layout_height="2dp"/>
            <View
                android:id="@+id/vi_me_navigation_favorite_index"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/selector_user_nav_index"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/widget_gray_separator"/>

</LinearLayout>
