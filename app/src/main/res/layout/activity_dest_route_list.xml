<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.live.DestRouteListMoreActivity">

    <net.doyouhike.app.bbs.ui.widget.common.TitleView
        android:id="@+id/navigation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:m_title="全部"/>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_activity_dest_route_list"
        android:layout_below="@id/navigation_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        app:ptrAnimationStyle="rotate"
        app:ptrHeaderTextColor="#CCCCCC"
        app:ptrMode="both" >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>

</RelativeLayout>
