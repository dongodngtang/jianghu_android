<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llyt_follow_and_follower"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF3F3F3"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/selector_me_activity_options_item">

        <ImageView
            android:id="@+id/iv_action_pic"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="11dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/activity_pic"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/iv_action_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_action_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_action_pic"
            android:layout_toLeftOf="@id/iv_action_type"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:maxLines="2"
            android:textColor="@color/text_black_color_default"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_action_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_action_title"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="11dp"
                android:src="@drawable/icon_activity_time_3x" />

            <TextView
                android:id="@+id/tv_action_during_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="2016/07/01 共2天"
                android:textColor="@color/text_action_list_time"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@id/ll_action_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_action_grouper_name"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="磨房"
                android:visibility="gone"
                android:textColor="@color/text_action_list_time"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="11sp" />

            <net.doyouhike.app.library.ui.widgets.CircleImageView
                android:id="@+id/action_gouper_head"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="7dp"
                android:src="@drawable/ic_portrait_test" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/view_long"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_divider" />

    <View
        android:id="@+id/v_gap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/color_divider" >
    </View>

</LinearLayout>