<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_dest_route_parent"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:clickable="true"
    android:background="@drawable/selector_list_item_bg">

    <ImageView
        android:id="@+id/iv_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:src="@drawable/activity_map_disable" />

    <TextView
        android:id="@+id/tv_dest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:textColor="@color/txt_content"
        android:layout_toRightOf="@id/iv_type_label" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="14dp"
        android:background="@color/color_divider" />

</RelativeLayout>
