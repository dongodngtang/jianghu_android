<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/selector_list_item_bg"
    android:layout_height="44dp">
    
    <ImageView
        android:id="@+id/iv_des_and_road_item"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="14dp"
        android:layout_centerVertical="true"
        android:src="@drawable/item_road_search_selector"/>
    <TextView
        android:id="@+id/tv_item_road_search_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/iv_des_and_road_item"
        android:layout_centerVertical="true"
        android:text=""
        android:ellipsize="end"
        android:maxLines="1" />
    <View
        android:id="@+id/item_des_and_road_list_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="14dp"
        android:background="@color/color_divider"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>