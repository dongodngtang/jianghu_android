<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/vi_item_live_comment_popupmenu_anchor"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:id="@+id/ll_item_live_comment_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_live_comment_item_bg"
        android:paddingLeft="14dp">

        <ImageView
            android:id="@+id/iv_item_live_comment_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/none_header" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="14dp">

                <TextView
                    android:id="@+id/tv_item_live_comment_user_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/nickname"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/txt_button_common_light"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_item_live_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="2016/02/03"
                    android:textColor="@color/txt_light_tip_26"
                    android:textSize="12sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_item_live_comment_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="14dp"
                android:gravity="left|top"
                android:text="这里是评论内容"
                android:textColor="#DE000000"
                android:textSize="16sp" />


            <View
                android:id="@+id/vi_item_live_comment_divider_event"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:visibility="gone"
                android:background="@color/color_divider" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/vi_item_live_comment_divider"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_divider" />
</RelativeLayout>