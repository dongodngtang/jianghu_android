<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_tag_content"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:background="@drawable/bg_home_tag_content"
        android:gravity="center"
        android:text="云贵"
        android:textSize="12sp"
        android:textColor="@drawable/selector_hom_tag_txt" />

    <ImageButton
        android:id="@+id/btn_item_tag_content_del"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_home_tag_del" />
</RelativeLayout>