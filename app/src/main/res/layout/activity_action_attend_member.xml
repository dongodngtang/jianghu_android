<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llyt_this"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fdfdfd" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/action_attend_number"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:clickable="true"
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="@string/action_select"
            android:textColor="#2b96e8"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:onClick="rollBack"
            android:padding="8dp"
            android:src="@drawable/ic_back_3x" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_action_attend_member"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:background="#FFFFFFFF"
        android:divider="@null">
    </ListView>

</LinearLayout>