<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llyt_network_anomaly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_tip_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/tv_tip_first_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28.6dp"
        android:text="@string/network_anomaly"
        android:textColor="#FF404040"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_tip_second_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/try_to_click_refresh"
        android:textColor="#BFBFBF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/btn_tip_retry"
        android:layout_width="126dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/refresh"
        android:background="@drawable/selector_btn_retry_bg"
        android:textColor="@color/selector_txt_retry"
        android:textSize="14dp" />

</LinearLayout>