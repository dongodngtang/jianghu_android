<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoneTranslucent" parent="AppTheme.Base">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/color_theme</item>
        <item name="colorPrimaryDark">@color/color_theme</item>
        <item name="colorAccent">@color/color_theme</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowBackground">@color/color_background</item>
    </style>

    <style name="Theme.SmoothProgressBarDefaults" parent="Theme.AppCompat">
        <item name="cpbStyle">@style/CircularProgressBar</item>
    </style>

    <style name="CPB" parent="Widget.AppCompat.ProgressBar" />

    <style name="CircularProgressBar" parent="CPB">
        <item name="cpb_color">@color/cpb_default_color</item>
        <item name="cpb_stroke_width">@dimen/cpb_default_stroke_width</item>
        <item name="cpb_min_sweep_angle">@integer/cpb_default_min_sweep_angle</item>
        <item name="cpb_max_sweep_angle">@integer/cpb_default_max_sweep_angle</item>
        <item name="cpb_sweep_speed">@string/cpb_default_sweep_speed</item>
        <item name="cpb_rotation_speed">@string/cpb_default_rotation_speed</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">0dp</item>
    </style>

    <style name="loadingDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!--文字相关-->
    <!--深色标题文字 用于标题类文本-->
    <style name="txt_title_dark_standard">
        <item name="android:textSize">@dimen/txt_title_standard</item>
        <item name="android:textColor">@color/txt_title_dark_standard</item>
    </style>
    <!--深色小标题 用于短且重要文本-->
    <style name="txt_title_dark_small">
        <item name="android:textSize">@dimen/txt_title_small</item>
        <item name="android:textColor">@color/txt_title_dark_small</item>
    </style>
    <!--深色正文 用于长文本-->
    <style name="txt_dark_content">
        <item name="android:textSize">@dimen/txt_content</item>
        <item name="android:textColor">@color/txt_dark_content</item>
    </style>
    <!--深色提示文字 用于输入提示文本等-->
    <style name="txt_dark_tip">
        <item name="android:textSize">@dimen/txt_tip</item>
        <item name="android:textColor">@color/txt_dark_tip</item>
    </style>
    <!--深色备注文字 用于备注、提示类文本-->
    <style name="txt_dark_remark">
        <item name="android:textSize">@dimen/txt_remark</item>
        <item name="android:textColor">@color/txt_dark_remark</item>
    </style>


    <!--浅色标题文字 用于标题类文本-->
    <style name="txt_title_light_standard">
        <item name="android:textSize">@dimen/txt_title_standard</item>
        <item name="android:textColor">@color/txt_title_light_standard</item>
    </style>
    <!--浅色小标题 用于短且重要文本-->
    <style name="txt_title_light_small">
        <item name="android:textSize">@dimen/txt_title_small</item>
        <item name="android:textColor">@color/txt_title_dark_87</item>
    </style>
    <!--浅色正文 用于长文本-->
    <style name="txt_light_content">
        <item name="android:textSize">@dimen/txt_content</item>
        <item name="android:textColor">@color/txt_light_content_54</item>
    </style>
    <!--浅色提示文字 用于输入提示文本等-->
    <style name="txt_light_tip">
        <item name="android:textSize">@dimen/txt_tip</item>
        <item name="android:textColor">@color/txt_light_tip_26</item>
    </style>
    <!--浅色备注文字 用于备注、提示类文本-->
    <style name="txt_light_remark">
        <item name="android:textSize">@dimen/txt_remark</item>
        <item name="android:textColor">@color/txt_light_remark</item>
    </style>

    <!--SnackBar 属性-->
    <style name="Snack_Bar">
        <item name="android:background">@color/snack_bg</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/snack_bar_left_right_padding</item>
        <item name="android:paddingRight">@dimen/snack_bar_left_right_padding</item>
        <item name="android:paddingTop">@dimen/snack_bar_top_padding</item>
        <item name="android:paddingBottom">@dimen/snack_bar_bottom_padding</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:minHeight">@dimen/snack_bar_height</item>
        <item name="android:maxHeight">@dimen/snack_bar_max_height</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Snack_Bar_Title">
        <item name="android:textColor">@color/color_snack</item>
        <item name="android:textSize">@dimen/snack_bar_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAppearance">@style/SnackBar.TextAppearance.Regular</item>
    </style>

    <style name="Snack_Bar_Button" parent="@android:style/Widget.ActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAppearance">@style/SnackBar.TextAppearance.Medium</item>
        <item name="android:textSize">@dimen/snack_bar_action_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SnackBar.TextAppearance.Regular" parent="android:TextAppearance">
        <item name="android:typeface">sans</item>
    </style>

    <style name="SnackBar.TextAppearance.Medium" parent="android:TextAppearance">
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="elv_fade_animation">
        <item name="@android:windowEnterAnimation">@anim/fade_in</item>
        <item name="@android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>